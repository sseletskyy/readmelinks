{
  "name": "readmelinks",
  "version": "0.0.1",
  "description": "Helper tool to find all nested README.md files, generate links to them and insert those links to the root README.md",
  "main": "src/index.js",
  "files": [
    "/src/*.js",
    "/bin/*.js"
  ],
  "bin": {
    "readmeupdate": "npx ts-node ./src/index.ts",
    "readmelinks": "./bin/readmelinks.js"
  },
  "scripts": {
    "test": "jest",
    "prettier": "npx prettier --check --write \"src/**/*.ts\" --parser typescript",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sseletskyy/readme-links.git"
  },
  "keywords": [
    "tool",
    "readme.md",
    "link",
    "generator"
  ],
  "author": "Sergiy Seletskyy <sseletskyy@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sseletskyy/readme-links/issues"
  },
  "homepage": "https://github.com/sseletskyy/readme-links#readme",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.27",
    "babel-jest": "^26.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier",
      "pre-push": "npm test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "parser": "babel",
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
