{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "ESNext",
    "outDir": "src",
    "declaration": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": ["src"],
    "types": ["node"]
  },
  "include": [
    "src",
    "node_modules/@types/node/globals.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
